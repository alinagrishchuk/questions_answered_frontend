<form {{on "submit" this.submit}} class="py-16" id="question-form">
  <div>
    <Input
      @value={{this.title}}
      placeholder="Add subject..."
      class="shadow-md p-6 w-full"
    />
  </div>

  <div class="mt-4">
    <Textarea
      @value={{this.body}}
      placeholder="Start typing your question..."
      class="shadow-md p-6 w-full h-36"
    />
  </div>

  <div class="mt-4">
    <button
      class="block w-fit rounded-lg shadow-md hover:shadow-lg bg-blue-500 hover:bg-blue-600 hover:cursor-pointer text-center text-white font-bold rounded py-2 px-4"
      type="submit"
    >
      Ask Question
    </button>
  </div>
</form>